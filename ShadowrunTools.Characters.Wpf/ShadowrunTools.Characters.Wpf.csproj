    </Page>
    <Page Update="MainWindow.xaml">
      <Generator>MSBuild:Compile</Generator>
    </Page>
    <Page Update="Views\AttributesView.xaml">
      <Generator>MSBuild:Compile</Generator>
    </Page>
    <Page Update="Views\AttributeUpDown.xaml">
      <Generator>MSBuild:Compile</Generator>
    </Page>
    <Page Update="Views\CharacterView.xaml">
