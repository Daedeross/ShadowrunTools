<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- List View -->
    <Color x:Key="SelectedBackgroundColor">#FFC5CBF9</Color>
    <Color x:Key="SelectedUnfocusedColor">#FFDDDDDD</Color>
    <Color x:Key="ListHoverBackgroundColor">#FF00CBF9</Color>

    <LinearGradientBrush  x:Key="BlueRinseBrush"
                          EndPoint="0.5,1" StartPoint="0.5,0">
        <GradientStop Color="#FF223B84" Offset="1"/>
        <GradientStop Color="#FF57A0F4" Offset="0.5"/>
        <GradientStop Color="#FF4B94EC" Offset="0.5"/>
    </LinearGradientBrush>

    <SolidColorBrush x:Key="HeaderBorderBrush"
                     Color="#ff000000" />

    <SolidColorBrush x:Key="HeaderBackgroundBrush"
                     Color="#ffCCCCCC" />

    <SolidColorBrush x:Key="HeaderForegroundBrush"
                     Color="#ff000000" />

    <SolidColorBrush x:Key="HeaderHighlightBackground"
                     Color="Black" />

    <SolidColorBrush x:Key="HeaderHighlightForeground"
                     Color="White" />

</ResourceDictionary>