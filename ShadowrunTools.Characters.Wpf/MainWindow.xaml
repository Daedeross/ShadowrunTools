<Window x:Class="ShadowrunTools.Characters.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:rxui="http://reactiveui.net"
        xmlns:views="clr-namespace:ShadowrunTools.Characters.Wpf.Views"
        xmlns:dragablz="clr-namespace:Dragablz;assembly=Dragablz"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="1325">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <Menu Grid.Row="0">
            <MenuItem Header="_File">
                <MenuItem Header="_New" Name="NewButton" />
            </MenuItem>
            <MenuItem Header="_Characters" >
                <MenuItem Header="Not Implemented" />
            </MenuItem>
        </Menu>
        <StatusBar Grid.Row="2">
            <StatusBarItem>
                <TextBlock >Status Here</TextBlock>
            </StatusBarItem>
        </StatusBar>
        <dragablz:TabablzControl x:Name="DocumentsTabControl">
        </dragablz:TabablzControl>
    </Grid>
</Window>
